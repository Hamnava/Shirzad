
@model Shirzad.Core.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shirzad</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shirzad.styles.css" asp-append-version="true" />
</head>
<body>
<div style="width:100%; height:100%; margin-top:150px">
    <div class="col-6 offset-3">
        <div class="card pt-4">
            <h4 class="text-center" style="color:orange"> Shirzad Website</h4>
            <div class="card-body">
                <form asp-controller="Account" asp-action="Login" method="post" autocomplete="off">
                    <div class="form-group my-3">
                        <div class="input-group">
                            <input asp-for="UserName" type="text" placeholder="Your username" class="form-control" />
                        </div>
                        <span asp-validation-for="UserName" class="text-danger" style="font-weight:bold"></span>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <input asp-for="Password" type="password" placeholder="Your password" class="form-control" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger" style="font-weight:bold"></span>
                    </div>
                    <div class="form-group form-check mt-3">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Ispersistant"  style="margin-right:20px"/> @Html.DisplayNameFor(model => model.Ispersistant)
                        </label>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Sign In" style="width:100px; margin: 10px auto" class="btn btn-primary form-control" />
                    </div>
                </form>
               
            </div>
        </div>
    </div>
</div>

    
</body>
</html>

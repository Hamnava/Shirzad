@model PricingViewModel
@{
    ViewData["Title"] = "Pricing-order";
    Layout = "_MainSiteLayout";
}

<!-- start of Order section -->
<div class="container">
    <h3 class="text-center mt-5">Do you want to have a pricing request?</h3>
    <form asp-controller="SitePages" asp-action="PricingOrder" method="post">
        <div class="row my-5 p-5 contact-message-box">
            <strong>Send us your message</strong>
            <div class="col-sm-12 col-md-6">
                <div class="form-group">
                    <input type="text" asp-for="Name" class="form-control mt-2" placeholder="Your name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <input type="text" asp-for="LastName" class="form-control mt-2" placeholder="Your last Name">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" asp-for="Phone" class="form-control mt-4" placeholder="Your Phone Number">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="email" asp-for="Email" class="form-control mt-4" placeholder="Your Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 col-md-6">
                <div class="form-group">
                <textarea rows="8" asp-for="Message" class="form-control my-2" placeholder="Your Message"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>
            <button class="btn btn-submit-message mt-3" type="submit">Submit</button>
        </div>
    </form>
</div>
<!-- end of Order section -->

@model IEnumerable<Pricing>
@{
    ViewData["Title"] = "Contact List";
    var counter = 1;
}
<div class="container mt-4">
    <div class="row">
        <div class="alert alert-info mb-3">
            Contact Lists
        </div>
    </div>
  
</div>
<table class="table table-hover mt-4">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Full Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Email</th>
            <th scope="col">Sent Date</th>
           
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@counter</th>
                <td>@item.Name @item.LastName</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.SendDate.ToString("dddd, dd MMMM yyyy")</td>
                <td>
                    <a asp-action="Detials" asp-route-id="@item.Id" title="Details" asp-controller="Pricing" class="btn-info btn mr-3"><i class="fa fa-book"></i></a>
                </td>
            </tr>
            counter++;
        }

       
    </tbody>
</table>
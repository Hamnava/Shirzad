
@model WebPayOnlineViewModel
@{
    ViewData["Title"] = "Edit Web Pay";
    
}


<div class="col-6 mt-5  offset-3">
    <div class="container mt-5">
        <div class="row">
            <div class="alert alert-info text-center mb-3">
                Edit WEB Pay
            </div>
        </div>
    </div>
    <div class="card-box">
        <form asp-action="Edit" method="post" class="mt-5" enctype="multipart/form-data">

            <div class="form-group my-3">
                <label> Web Pay Title</label>
                <input asp-for="Name" type="text" placeholder="Enter the Web Pay title " class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <label>Discription </label>
                <textarea asp-for="Description" rows="8" placeholder="Enter the Descptripion" class="form-control"></textarea>
                 <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <label>Image Link </label>
                <input asp-for="ImageLink" class="form-control">
                <span asp-validation-for="ImageLink" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <input type="hidden" asp-for="PhotoUrl" />
                <label>Photo</label>
                <input name="file" type="file"  class="form-control">
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                <img src="~/Img/WebPay/@Model.PhotoUrl" style="width:400px; height:200px"/>
            </div>

            

            <div class="form-group text-right m-b-0 d-flex justify-content-center">
                <button class="btn btn-primary " type="submit">
                    Save changes
                </button>
                <a asp-action="Index" class="btn btn-default">
                    Cancel
                </a>
            </div>

        </form>
    </div>
</div>

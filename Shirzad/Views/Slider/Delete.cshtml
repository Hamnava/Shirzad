@model Slider
@{
    ViewData["Title"] = "Add Slider";

}


<div class="col-6 mt-5  offset-3">
    <div class="container mt-5">
        <div class="row">
            <div class="alert alert-info text-center mb-3">
                Delete Slider
            </div>
        </div>
    </div>
    <div class="card-box">
        <h5 class="text-center text-warning">Are you sure you want to delete it?</h5>
        <form asp-action="Delete" method="post" class="mt-5" enctype="multipart/form-data">
            <input type="number" hidden asp-for="Id" />
            <input type="hidden" asp-for="SliderImg" />


            <div class="form-group text-right m-b-0 d-flex justify-content-center">
                <button class="btn btn-primary " type="submit">
                    Delete Slider
                </button>
                <a asp-action="Index" class="btn btn-default">
                    Cancel
                </a>
            </div>

        </form>
    </div>
</div>

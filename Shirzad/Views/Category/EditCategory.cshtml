@model Category
@{

}

<div style="width:100%; height:100%; margin-top:150px">
    <div class="container mt-4">
        <div class="row">
            <div class="alert alert-info mb-3">
                Edit Category
            </div>
        </div>
        <a class="btn btn-primary" asp-action="Index" asp-controller="Category"> Back </a>
    </div>
    <div class="col-6 offset-3">
        <div class="card pt-4">
            <h4 class="text-center" style="color:orange"> Category Part </h4>
            <div class="card-body">
                <form asp-controller="Category" asp-action="EditCategory" method="post" autocomplete="off">
                    <div class="form-group my-3">
                        <div class="input-group">
                            <input asp-for="Name" type="text" placeholder="Your Category Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger" style="font-weight:bold"></span>
                    </div>
                    <input type="number" asp-for="Id" hidden />
                    <div class="form-group text-center">
                        <input type="submit" value="Save Changes" class="btn btn-primary save-btn form-control" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
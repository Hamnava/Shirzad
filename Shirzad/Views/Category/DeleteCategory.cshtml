@model Category
@{

}

<div style="width:100%; height:100%; margin-top:150px">
    <div class="container mt-4">
        <div class="row">
            <div class="alert alert-info mb-3">
                Delete Category
            </div>
        </div>
        <a class="btn btn-primary" asp-action="Index" asp-controller="Category"> Back </a>
    </div>
    <div class="col-6 offset-3">
        <div class="card pt-4">
            <p class="text-center" style="color:orange"> @ViewBag.Message </p>
            <div class="card-body">
                <form asp-controller="Category" asp-action="DeleteCategory" method="post" autocomplete="off">
                    <input type="number" asp-for="Id" hidden />
                    <input type="text" asp-for="Name" hidden />
                    <input type="checkbox" asp-for="IsDelete" hidden />
                    <div class="form-group text-center">
                        <input type="submit" value="Save Changes" class="btn btn-primary save-btn form-control" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
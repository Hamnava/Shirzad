
@model Service
@{
    ViewData["Title"] = "Add service";
    
}


<div class="col-6 mt-5  offset-3">
    <div class="container mt-5">
        <div class="row">
            <div class="alert alert-info text-center mb-3">
                Add Service
            </div>
        </div>
    </div>
    <div class="card-box">
        <form asp-action="AddService" method="post" class="mt-5" enctype="multipart/form-data">

            <div class="form-group my-3">
                <label> Service Name</label>
                <input asp-for="Name" type="text" placeholder="Enter the Service Name " class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

           

            <div class="form-group my-3">
                <label>Description </label>
                <textarea asp-for="Description"  rows="8" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <label>Service photo</label>
                <input name="file" type="file"  class="form-control">
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>

           
            <div class="form-group text-right m-b-0 d-flex justify-content-center">
                <button class="btn btn-primary " type="submit">
                    Save
                </button>
                <a asp-action="Index" class="btn btn-default">
                    Cancel
                </a>
            </div>

        </form>
    </div>
</div>

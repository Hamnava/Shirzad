@model IEnumerable<Service>
@{
    ViewData["Title"] = "Slider List";
    var counter = 1;
}
<div class="container mt-4">
    <div class="row">
        <div class="alert alert-info mb-3">
            Service List
        </div>
    </div>
    <a class="btn btn-primary" asp-action="AddService" asp-controller="Service"> Add New <i class="fa fa-plus ml-2"></i></a>
</div>
<table class="table table-hover mt-4">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Service Name</th>
            <th scope="col">image</th>
            <th scope="col">Description</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@counter</th>
                <td>@item.Name</td>
                <td>
                    <img src="~/Img/Service/@item.PhotoUrl" alt="@item.Name" style="width:150px; height:60px" />
                </td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Service" class="btn-danger btn mr-3"><i class="fa fa-trash"></i></a>
                    <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="Service" class="btn-success btn mr-3"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
            counter++;
        }

       
    </tbody>
</table>
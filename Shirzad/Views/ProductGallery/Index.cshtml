@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Products";
    var counter = 1;
}
<div class="container mt-4">
    <div class="row">
        <div class="alert alert-info mb-3">
            Products
        </div>
    </div>
</div>
<table class="table table-hover mt-4">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Image</th>
            <th scope="col">Is Active</th>
            @*<th scope="col">Category</th>*@
            <th scope="col">IsNew</th>
            <th scope="col">Price</th>
          
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@counter</th>
                <td>@item.Name</td>
                <td>
                    <img src="Img/Product/@item.PhotoUrl" alt="@item.Name" style="width:200px; height:50px"/>
                </td>
                <td style="color:@(item.IsActive? "green": "darkred"); font-weight:bold; ">@(item.IsActive? "Active" : "InActive")</td>
               @* <td>@item.Category.Name</td>*@
                <td style="color:@(item.IsNew? "green": "darkred"); font-weight:bold; ">@(item.IsActive? "New" : "Not New")</td>
                <td>@item.Price</td>
               
                
                <td>
                    <a asp-action="AddPhoto" asp-route-id="@item.Id" asp-controller="ProductGallery" title="Add Photo" class="btn-primary btn"><i class="fa fa-image"></i> <i class="fa fa-plus"></i></a>
                </td>
            </tr>
            counter++;
        }

       
    </tbody>
</table>